<div class="container">
  <h1><%= current_user.email %>的文章列表</h1>
  
  <%= link_to "新增", new_post_path, class:"btn btn-success" %>
  
  <table class="table">
    <thead>
      <tr>
        <th>標題</th>
        <th>內容</th>
        <th>作者</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <% if post.user == current_user %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td>
          <%= link_to "編輯", edit_post_path(post), class:"btn btn-outline-success" %>
          <%= link_to "刪除", post, method: :delete, data: { confirm: "確定要刪除嗎？" }, class:"btn btn-outline-success" %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>
</div>
