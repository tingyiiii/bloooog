<div class="container">
  <h1>文章列表</h1>
  
  
  <table class="table">
    <thead>
      <tr>
        <th>標題</th>
        <th>內容</th>
        <th>作者</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        <td><%= User.find_by(id: post.user_id).email %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
